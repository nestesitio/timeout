<?xml version="1.0" encoding="UTF-8"?>
<root>
  <show>
    <fields comment="Fields for render">
      <mediaid field="media.id" show="false" filter="false">
        <label key="id" />
      </mediaid>
      <mediahtmid field="media.htm_id" range="multiple" show="false" filter="true">
        <label key="id" />
      </mediahtmid>
      <mediagenre field="media.genre" show="true" filter="true">
        <label lang="en">Genre</label>
        <label lang="es">Genre</label>
        <label lang="fr">Genre</label>
        <label lang="pt">Genre</label>
      </mediagenre>
      <mediaurl field="media.url" show="true" filter="true">
        <label lang="en">Url</label>
        <label lang="es">Url</label>
        <label lang="fr">Url</label>
        <label lang="pt">Url</label>
      </mediaurl>
      <mediaposition field="media.position" show="true" filter="true">
        <label lang="en">Position</label>
        <label lang="es">Position</label>
        <label lang="fr">Position</label>
        <label lang="pt">Position</label>
      </mediaposition>
      <mediatitle field="media.title" show="true" filter="true">
        <label lang="en">Title</label>
        <label lang="es">Title</label>
        <label lang="fr">Title</label>
        <label key="title" />
      </mediatitle>
      <mediaauthor field="media.author" show="true" filter="true">
        <label lang="en">Author</label>
        <label lang="es">Author</label>
        <label lang="fr">Author</label>
        <label lang="pt">Author</label>
      </mediaauthor>
      <mediadate field="media.date" range="range" show="true" filter="true" type="DateInput">
        <label lang="en">Date</label>
        <label lang="es">Date</label>
        <label lang="fr">Date</label>
        <label lang="pt">Date</label>
      </mediadate>
      <mediacreated field="media.created" range="range" show="true" filter="true" type="DateInput">
        <label lang="en">Created</label>
        <label lang="es">Created</label>
        <label lang="fr">Created</label>
        <label lang="pt">Criado em</label>
      </mediacreated>
      <mediadescription field="media.description" show="true" filter="true">
        <label lang="en">Description</label>
        <label lang="es">Description</label>
        <label lang="fr">Description</label>
        <label lang="pt">Description</label>
      </mediadescription>
    </fields>
    <buttons comment="Commands for form and show">
      <saveform class="glyphicon glyphicon-save" action="salesforce/edit_files" auth="1">
        <label key="save" />
      </saveform>
      <editform class="glyphicon glyphicon-pencil" action="salesforce/edit_files" auth="1">
        <label key="edit" />
      </editform>
      <delform class="glyphicon glyphicon-trash" action="del_files" auth="1">
        <label key="delete" />
      </delform>
      <closeform class="glyphicon glyphicon-remove" auth="4">

        <label lang="es">Close</label>
        <label lang="fr">Close</label>
        <label key="close" />
      </closeform>
    </buttons>
  </show>
  <grid identification="files" paging="25" fieldid="media.id">
    <columns comment="Columns for grid">
      <mediaid field="media.id" class="id" sort="true">
        <label key="id" />
      </mediaid>
      <mediagenre field="media.genre" class="genre" sort="true">
        <label lang="en">Genre</label>
        <label lang="es">Genre</label>
        <label lang="fr">Genre</label>
        <label lang="pt">Genre</label>
      </mediagenre>
      <mediaurl field="media.url" class="url" sort="true">
        <label lang="en">Url</label>
        <label lang="es">Url</label>
        <label lang="fr">Url</label>
        <label lang="pt">Url</label>
      </mediaurl>
      <mediaposition field="media.position" class="position" sort="true">
        <label lang="en">Position</label>
        <label lang="es">Position</label>
        <label lang="fr">Position</label>
        <label lang="pt">Position</label>
      </mediaposition>
      <mediatitle field="media.title" class="title" sort="true">
        <label key="title" />
      </mediatitle>
      <mediaauthor field="media.author" class="author" sort="true">
        <label lang="en">Author</label>
        <label lang="es">Author</label>
        <label lang="fr">Author</label>
        <label lang="pt">Author</label>
      </mediaauthor>
      <mediadate field="media.date" class="date" sort="true">
        <label lang="en">Date</label>
        <label lang="es">Date</label>
        <label lang="fr">Date</label>
        <label lang="pt">Date</label>
      </mediadate>
      <mediacreated field="media.created" class="created" sort="true">
        <label lang="en">Created</label>
        <label lang="es">Created</label>
        <label lang="fr">Created</label>
        <label lang="pt">Criado em</label>
      </mediacreated>
      <mediadescription field="media.description" class="description" sort="true">
        <label lang="en">Description</label>
        <label lang="es">Description</label>
        <label lang="fr">Description</label>
        <label lang="pt">Description</label>
      </mediadescription>
    </columns>
    <tools comment="buttons in row">
      <edit action="core/edit_files" class="fa-pencil" id="media.id" auth="1">
        <label key="edit" />
      </edit>
      <show action="core/show_files" class="fa-eye" id="media.id" auth="1">

        <label lang="es">Show</label>
        <label lang="fr">Show</label>
        <label key="show" />
      </show>
      <del action="core/del_files" class="fa-trash-o" id="media.id" auth="1">
        <label key="delete" />
      </del>
    </tools>
    <buttons comment="buttons ion top">
      <new action="core/new_files" class="glyphicon glyphicon-file" auth="4">
        <label key="insert" />
      </new>
    </buttons>
  </grid>
</root>
